package loops13;
import java.util.Scanner;
public class PalinDromePRonblemWhileloop {

	public static void main(String[] args) {
		 
		 Scanner sc = new Scanner(System.in);
		 System.out.print("Enter the number =");
		 int n = sc.nextInt();
		 
		 int reverse =0;
		 int temp = n;
		
while(temp>0) {
	          int digit = temp%10;
	          temp/=10;
	          reverse = reverse*10+digit;
	     
}     
   System.out.print("Palindrome of "+ n + " is " + reverse );
   
	}

}

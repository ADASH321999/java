package loops12;
import java.util.Scanner;
public class WhileLoopSumOfNumbers {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
	     int temp =n;
	     int Sum=0;
	     System.out.println("Process");
	     while(temp >0) {
	    	int lastdigit= temp%10;
	    	temp/=10;
	    	Sum+=lastdigit;
	   
	    	System.out.println(lastdigit+"   "+temp+"   "+Sum);
	     }System.out.println("Sum of all the digits of the number "+n+" = "+Sum);
	}
}

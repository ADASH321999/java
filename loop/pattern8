package loops9;
import java.util.Scanner;
public class PatternAndNumbers {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int Sum = 1;
		for (int i=1;i<=n;i++) {
			for (int j=1;j<=n-i;j++) {
				System.out.print("  ");
			}
			for (int k=1;k<=i;k++) {
				if (i<=4) {
				System.out.print(Sum++ + "  "+ "  ");
			}else {
				System.out.print(Sum++ + " " +"  ");
			}
			
		}
			
			
			System.out.println();
	}

}
}

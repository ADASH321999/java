package switchCase;
import  java.util.Scanner;
public class WeekScheduler {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
     Scanner sc = new Scanner (System.in);
     System.out.print("Enter day of the Week =");
     String Day = sc.nextLine();
     switch (Day) {
     case "Monday":
    	 System.out.println("Leg Session");
    	 break;
     case "Tuesday":
    	 System.out.println("Chest Session");
    	 break;
     case "Wenesday":
    	 System.out.println("ForeArm Session");
    	 break;
     case "Thusday":
    	 System.out.println("BACk Session");
    	 break;
     case "Friday":
    	 System.out.println("Cardio Session");
    	 break;
     case "Saturday":
     System.out.println("SWimming and Running Session");
     break;
     case "Sunday":
    	 System.out.println("REST DAY");
    	 break;
	}
}
}
